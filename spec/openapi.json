  "components": {
    "schemas": {
      "InfoResponse": {
        "type": "object",
        "required": [
          "redis",
          "url",
          "version"
        ],
        "properties": {
          "url": {
            "type": "string"
          },
          "version": {
            "type": "string"
          },
          "redis": {
            "$ref": "#/components/schemas/RedisStats"
          }
        }
      },
      "RedisStats": {
        "type": "object",
        "required": [
          "static",
          "streaming",
          "streaming_available",
          "streaming_in_use",
          "streaming_max"
        ],
        "properties": {
          "static": {
            "description": "Number of static connections",
            "type": "integer",
            "format": "uint",
            "minimum": 0.0
          },
          "streaming": {
            "description": "Number of streaming connections",
            "type": "integer",
            "format": "uint",
            "minimum": 0.0
          },
          "streaming_in_use": {
            "description": "Number of in-use streaming connections",
            "type": "integer",
            "format": "uint",
            "minimum": 0.0
          },
          "streaming_available": {
            "description": "Number of available streaming connections",
            "type": "integer",
            "format": "uint",
            "minimum": 0.0
          },
          "streaming_max": {
            "description": "Maximum number of streaming connections",
            "type": "integer",
            "format": "uint",
            "minimum": 0.0
          }
        }
      },
      "ErrorMessage": {
        "type": "object",
        "required": [
          "code",
          "message"
        ],
        "properties": {
          "message": {
            "type": "string"
          },
          "code": {
            "type": "string"
          }
        }
      },
      "StreamInfo": {
        "description": "Information about the stream",
        "type": "object",
        "required": [
          "key",
          "length",
          "ttl"
        ],
        "properties": {
          "key": {
            "description": "Key of the stream in Redis",
            "type": "string"
          },
          "length": {
            "description": "Number of events in the stream",
            "type": "integer",
            "format": "uint64",
            "minimum": 0.0
          },
          "ttl": {
            "description": "Expiration of the stream",
            "type": "integer",
            "format": "int64"
          }
        }
      },
      "StreamAccessResponse": {
        "type": "object",
        "required": [
          "token",
          "url"
        ],
        "properties": {
          "url": {
            "description": "URL to connect to the stream",
            "type": "string"
          },
          "token": {
            "description": "Bearer token to access the stream",
            "type": "string"
          }
        }
      },
      "StreamRequest": {
        "type": "object",
        "required": [
          "key"
        ],
        "properties": {
          "key": {
            "type": "string"
          }
        }
      },
      "StreamEvent": {
        "type": "object",
        "required": [
          "event",
          "id",
          "time"
        ],
        "properties": {
          "id": {
            "description": "ID of the event",
            "type": "string"
          },
          "time": {
            "description": "Time of the event (ISO 8601 format)",
            "type": "string"
          },
          "event": {
            "description": "Name/type of the event",
            "type": "string"
          },
          "data": {
            "description": "Event data",
            "type": "string",
            "nullable": true
          }
        }
      },
      "EndStreamResponse": {
        "type": "object",
        "required": [
          "status"
        ],
        "properties": {
          "status": {
            "description": "Status of the stream",
            "allOf": [
              {
                "$ref": "#/components/schemas/StreamStatus"
              }
            ]
          }
        }
      },
      "StreamStatus": {
        "type": "string",
        "enum": [
          "active",
          "cancelled",
          "ended"
        ]
      },
      "AddEventsResponse": {
        "type": "object",
        "required": [
          "ids"
        ],
        "properties": {
          "ids": {
            "description": "IDs of the added events",
            "type": "array",
            "items": {
              "type": "string"
            }
